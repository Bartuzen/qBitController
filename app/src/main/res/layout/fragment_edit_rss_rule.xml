<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rss_rule_enabled" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_use_regex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rss_rule_use_regular_expressions" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_must_contain"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rss_rule_must_contain">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_must_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_must_not_contain"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/rss_rule_must_not_contain">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_must_not_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_episode_filter"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/rss_rule_episode_filter">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_episode_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_smart_episode_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rss_rule_use_smart_episode_filter" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rss_rule_category">

            <dev.bartuzen.qbitcontroller.ui.view.ExposedDropdownTextView
                android:id="@+id/dropdown_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_save_path_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rss_rule_save_to_a_different_directory" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_save_path"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rss_rule_save_to">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_save_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_ignore_days"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/rss_rule_ignore_subsequent_matches_for">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_ignore_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_add_paused"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/rss_rule_add_paused">

            <dev.bartuzen.qbitcontroller.ui.view.ExposedDropdownTextView
                android:id="@+id/dropdown_add_paused"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_content_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/rss_rule_torrent_content_layout">

            <dev.bartuzen.qbitcontroller.ui.view.ExposedDropdownTextView
                android:id="@+id/dropdown_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
