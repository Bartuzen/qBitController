<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Material3.Preference">
        <item name="android:textAppearanceListItem">@style/TextAppearance.PreferenceTitle.Material3</item>
        <item name="android:listPreferredItemPaddingStart">24dp</item>
        <item name="android:listPreferredItemPaddingEnd">16dp</item>
        <item name="alertDialogTheme">@style/Preference.Dialog.Material3</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material3</item>
        <item name="colorBackgroundFloating">?colorSurface</item>
    </style>

    <style name="PreferenceThemeOverlay.Material3" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.CategoryTitle.Material3</item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category.Material3</item>
        <item name="preferenceStyle">@style/Preference.Material3</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material3</item>
        <item name="dialogPreferenceStyle">@style/Preference.Material3</item>
        <item name="editTextPreferenceStyle">@style/Preference.EditTextPreference.Material3</item>
        <item name="dropdownPreferenceStyle">@style/Preference.DropdownPreference.Material3</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreference.Material3</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekbarPreference.Material3</item>
    </style>

    <style name="Preference.Category.Material3" parent="@style/Preference.Category.Material">
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="Preference.Material3" parent="@style/Preference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.CheckBoxPreference.Material3" parent="@style/Preference.CheckBoxPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.EditTextPreference.Material3" parent="@style/Preference.DialogPreference.EditTextPreference.Material">
        <item name="iconSpaceReserved">false</item>
        <item name="android:dialogLayout">@layout/preference_dialog</item>
    </style>

    <style name="Preference.DropdownPreference.Material3" parent="@style/Preference.DropDown.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.SwitchPreference.Material3" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="iconSpaceReserved">false</item>
        <item name="android:widgetLayout">@layout/preference_switch</item>
    </style>

    <style name="Preference.SeekbarPreference.Material3" parent="@style/Preference.SeekBarPreference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Preference.Dialog.Material3" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="android:colorBackground">?attr/colorSurfaceContainerHigh</item>
    </style>

    <style name="TextAppearance.PreferenceTitle.Material3" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.CategoryTitle.Material3" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
